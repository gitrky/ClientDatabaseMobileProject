            size : 320,510
            pos_hint : {"center_x":.5,"center_y":.5}
            elevation : 15
            md_bg_color : [35/255,59/255,54/255,1]
            padding : 20
            spacing : 30
            BoxLayout:
                orientation : "vertical"
                Image:
                    source:'mylogo.png'
                    size_hint_y:None
            MDTextFieldRound :
                id:n
                hint_text : "İsim"
                size_hint_x : None
                icon_right : "account"
                width : 230
                font_size : 20
                pos_hint : {"center_x":.5}
                color_active : [1,1,1,1]
            MDTextFieldRound :
                id:email
                hint_text : "Email"
                size_hint_x : None
                icon_right : "account"
                width : 230
                font_size : 20
                pos_hint : {"center_x":.5}
                color_active : [1,1,1,1]
            MDTextFieldRound :
                id:passw
                hint_text : "Şifre"
                password : True
                size_hint_x : None
                icon_right : "eye-off"
                width : 230
