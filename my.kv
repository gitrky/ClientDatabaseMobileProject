<SendMessage>:
    name:"message"
    to:to
    subject:subject
    text:text
    MDScreen :
        md_bg_color: [35/255,49/255,48/255,1]
        MDCard :
            orientation : 'vertical'
            size_hint : None,None
            size : 300,500
            pos_hint : {"center_x":.5,"center_y":.5}
            elevation : 15
            md_bg_color : [35/255,59/255,54/255,1]
            padding : 20
            spacing : 30
            BoxLayout:
                orientation : "vertical"
                Image:
                    source:'mylogo.png'
                    size_hint_y:None

            MDTextFieldRound :
                id:to
                hint_text : "Kime"
                size_hint_x : None
                width : 230
                font_size : 20
                pos_hint : {"center_x":.5}
                color_active : 0, 0, 0, .4
            MDTextFieldRound :
                id:subject
                hint_text : "Konu"
                size_hint_x : None
                width : 230
                font_size : 20
                pos_hint : {"center_x":.5}
                color_active : 0, 0, 0, .4
            MDTextField:
                id:text
                multiline:True
                hint_text: "İçerik"
                color_mode: 'custom'
                mode: "fill"
                fill_color: 0, 0, 0, .4

            MDRoundFlatButton :
                text : "Gönder"
                font_size : 15
                pos_hint : {"center_x":.5}
                theme_text_color : "Custom"
                text_color : [0,0,0,1]
                on_press: root.button()
            MDRoundFlatButton :
                text : "Geri"
                font_size : 15
                pos_hint : {"left_x":.5}
                theme_text_color : "Custom"
                text_color : [0,0,0,1]
                on_press: root.manager.current = 'menu'

