                theme_text_color : "Custom"
                on_press: root.createAccount()
            MDRoundFlatButton :
                text : "Geri"
                font_size : 15
                pos_hint : {"left_x":.5}
                theme_text_color : "Custom"
                on_press: root.manager.current = 'login'
<MenuScreen>:
    name: 'menu'
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation : "vertical"
                    MDToolbar:
                        title: "Client "
                        md_bg_color : [35/255,59/255,54/255,1]
                        left_action_items:[['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        elevation:10
                    MDLabel:
                        text :" "
                        halign:"center"
                        pos_hint: {"center_x": .5, "center_y": 1.8}

                    MDIcon:
                        halign: "center"
                        icon:"mylogo.png"

                        pos_hint: {"center_x": .5,"top":0.7}

                    MDLabel:
                        text : ""
                        halign:"center"
                        pos_hint: {"center_x": .5, "center_y": 1.8}

        MDNavigationDrawer:
            id:nav_drawer
            BoxLayout:
                orientation : "vertical"
                md_bg_color : [35/255,59/255,54/255,1]
                Image:
                    source:'mylogo.png'
                    size_hint_y:None
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            on_press:root.addClient()
                            text:'Müşteri ekle'
                            IconLeftWidget:
                                icon:'plus'
                        OneLineIconListItem:
                            on_press:root.clientList()
                            text:'Müşteri listesi'
                            IconLeftWidget:
                                icon:'checkbook'
                        OneLineIconListItem:
                            text:'Bilgilendirme'
                            on_press:root.send()
                            IconLeftWidget:
                                icon:'email'
                        OneLineIconListItem:
                            text:'Ayarlar'
                            on_press:root.settings()
                            IconLeftWidget:
                                icon:'settings'
                        OneLineIconListItem:
                            text:'Çıkış'
                            on_press:root.logout()
                            IconLeftWidget:
                                icon:'logout'

